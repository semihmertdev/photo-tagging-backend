generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id        Int      @id @default(autoincrement())
  name      String
  xPosition Int
  yPosition Int
  createdAt DateTime @default(now())
}

model Score {
  id        Int      @id @default(autoincrement())
  name      String
  time      Int      // Oyun s√ºresi (milisaniye cinsinden)
  createdAt DateTime @default(now())
}
